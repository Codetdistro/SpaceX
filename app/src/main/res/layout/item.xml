<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="10dp"
    android:background="@drawable/recyclerbackground">

    <ImageView
        android:id="@+id/member_Image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name    -> "
        android:textColor="#000"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_medium"
        android:layout_toRightOf="@id/member_Image"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Robert"
        android:layout_marginRight="5dp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"
        android:textSize="15sp"
        android:layout_toRightOf="@id/place_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/place_agency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agency  -> "
        android:textColor="#000"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_medium"
        android:layout_toRightOf="@id/member_Image"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/agency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NASA"
        android:textColor="#000"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_medium"
        android:layout_toRightOf="@id/place_agency"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/place_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status    -> "
        android:textColor="#000"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_medium"
        android:layout_toRightOf="@id/member_Image"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active"
        android:textColor="#000"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_medium"
        android:layout_toRightOf="@id/place_agency"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="120dp"/>

    <TextView
        android:id="@+id/wikipedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="know more..."
        android:textColor="#198DD5"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_medium"/>
</RelativeLayout>